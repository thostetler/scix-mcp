{
  "$schema": "https://static.modelcontextprotocol.io/schemas/2025-10-17/server.schema.json",
  "name": "scix-mcp",
  "title": "NASA SciX MCP Server",
  "description": "Model Context Protocol server for NASA ADS (SciX) search, metrics, and library management.",
  "repository": {
    "url": "https://github.com/thostetler/scix-mcp",
    "source": "github"
  },
  "websiteUrl": "https://github.com/thostetler/scix-mcp",
  "version": "1.0.0",
  "packages": [
    {
      "registryType": "npm",
      "identifier": "scix-mcp",
      "version": "1.0.0",
      "transport": {
        "type": "stdio",
        "command": "npx",
        "args": ["scix-mcp"],
        "env": {
          "SCIX_API_TOKEN": "<your_scix_token>"
        }
      }
    }
  ]
}
